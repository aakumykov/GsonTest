<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cat2jsonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кошка --> JSON" />

    <Button
        android:id="@+id/json2catButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JSON --> Кошка" />

    <Button
        android:id="@+id/json2boardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="none"
        android:text="json2board"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/board2jsonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="none"
        android:text="board2json"
        android:textAllCaps="false" />
</LinearLayout>